{
  "name": "Matters-消音器",
  "permissions": ["*://127.0.0.1/*", "*://matters.news/*", "activeTab", "tabs"],
  "options_page": "options.html",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_icon": "icon-34.png"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://127.0.0.1/*", "*://matters.news/*"],
      "js": ["contentScript.bundle.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "options.html",
    "content.styles.css",
    "icon-128.png",
    "icon-34.png"
  ],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
